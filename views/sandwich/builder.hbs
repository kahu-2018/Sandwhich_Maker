<div class="container">
  <div class="ingredientOptions">
    <h3>Pick your next ingredient!</h3>
    <form action="">
      {{#each ingredientArray}}
        <a href="{{../baseURL}}/{{id}}"><img class="topping" src="{{image}}" alt="{{id}}"></a>
        {{name}}
      {{/each}}
    </form>

    <form action="/">
      <input type="submit" value="Restart" />
    </form>

  </div>
</div>
